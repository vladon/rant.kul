<maiken>
	<project>
		<name>kul</name>		
		<version>0.0.1</version>
	</project>	
	<includes>
		<include>./inc</include>
		<include>./tst</include>
		<include>./ext/kul/master/ext/pugixml/make/src</include>
		<include>./ext/kul/master/ext/glog/make/include</include>
		<include>./ext/kul/master/ext/glog/make/src</include>
	</includes>
	<libraries>
		<library>pugixml</library>
		<library>glog</library>	
		<library>pthread</library>	
	</libraries>
	<library-paths>		
		<library-path>./ext/kul/master/ext/pugixml/trunk/scripts</library-path>
		<library-path>./ext/kul/master/ext/glog/make</library-path>
	</library-paths>
	<!-- used when no profile is specified. supplied default values to profiles if required -->	
	<build type="lib" mode="static"> 
		<artifact name="libkul.a">cpp</artifact> 

		<env>
			<vars><!--var name="PATH" mode="replace"></var--></vars>
		</env>		
		<files>
			<file type="cpp">
				<args>
					<arg>-std=c++0x</arg><arg>-D__GXX_EXPERIMENTAL_CXX0X__</arg>
					<arg>-Wall</arg><arg>-c </arg><arg>-fmessage-length=0</arg>
					<arg>-O0</arg><arg>-g3</arg>
				</args>
			</file>
		</files>
	</build>
	<profiles>
		<profile name="linux">
			<includes>
				<include>./inc</include>
				<include>./tst</include>
				<include>./ext/kul/master/ext/pugixml/make/src</include>
				<include>./ext/kul/master/ext/glog/make/include</include>
				<include>./ext/kul/master/ext/glog/make/src</include>
			</includes>
			<libraries>	
				<library>pugixml</library>
				<library>glog</library>	
				<library>pthread</library>	
			</libraries>
			<library-paths>		
				<library-path>./ext/kul/master/ext/pugixml/trunk/scripts</library-path>
				<library-path>./ext/kul/master/ext/glog/make</library-path>
			</library-paths>
			<!-- used when no profile is specified. supplied default values to profiles if required -->	
			<build type="lib" mode="static"> 
				<artifact name="libkul.a">cpp</artifact> 
				<env>
					<vars><!--var name="PATH" mode="replace"></var--></vars>
				</env>		
				<files>
					<file type="cpp">
						<args>
							<arg>-std=c++0x</arg><arg>-D__GXX_EXPERIMENTAL_CXX0X__</arg>
							<arg>-Wall</arg><arg>-c </arg><arg>-fmessage-length=0</arg>
						</args>
					</file>
				</files>
			</build>
		</profile>
		<profile name="release" parent="linux"> 
			<build type="lib" mode="static">
				<files><file type="cpp"><args><arg>-O3</arg><arg>-g0</arg></args></file></files>
			</build>
		</profile>
	</profiles>
</maiken>


