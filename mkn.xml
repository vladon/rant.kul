<?xml version="1.0" encoding="UTF-8" ?>
<maiken>
	<properties>
		<github>http://www.github.com/Dekken</github>
		<spash>${github}/sparsehash</spash>
		<pugixml>${github}/pugixml</pugixml>
	</properties>
	<project>
		<name>kul</name>		
		<version>master</version>
		<scr scm="git">${github}/kul</scr>
	</project>
	<profiles>
		<profile name="c">
			<includes>
				<include>./inc</include>
				<include>./tst</include>
				<include>./os/${OS}/inc</include>
			</includes>
			<sources>
				<source>./src</source>
				<source>./os/${OS}/src</source>
			</sources>
			<dependencies>
				<dependency>
					<name>pugixml</name>
					<version>master</version>
					<scr scm="git">${pugixml}</scr>
				</dependency>
			</dependencies>	
			<build type="lib" mode="static" lang="cpp"/> 
		</profile>
		<profile name="nixc" parent="c">
			<includes>
				<include>./os/nixish/inc</include>
			</includes>
			<sources>
				<source>./os/nixish/src</source>
			</sources>
			<dependencies>
				<dependency>
					<name>sparsehash</name>
					<version>master</version>
					<scr scm="git" run="make &amp;&amp; make install">${spash}</scr>
				</dependency>
			</dependencies>	
		</profile>
		<profile name="nix" parent="nixc" os="nix"/>
		<profile name="bsd" parent="nixc" os="bsd"/>
		<profile name="win" parent="c" os="win">
			<includes>
				<include>./ext/msinttypes-r26</include>
			</includes>
			<dependencies>
				<dependency>
					<name>sparsehash</name>
					<version>master</version>
					<scr scm="git" run="make.bat">${spash}</scr>
				</dependency>
			</dependencies>	
		</profile>
	</profiles>
</maiken>
