<?xml version="1.0" encoding="UTF-8" ?>
<maiken>
	<project>
		<name>pugixml</name>
		<version>master</version>
	</project>

	<profiles>
		<profile name="com">
			<includes>
				<include>./trunk/src</include>
			</includes>
			<sources>
				<source>./trunk/src</source>
			</sources>
		</profile>
		<profile name="nixish" parent="com">
 			<build type="lib" mode="static" lang="cpp">
				<files>
					<file type="cpp">
						<args>		
							<arg>-std=c++1y</arg>
							<arg>-Wall</arg>
							<arg>-fmessage-length=0</arg>
						</args>
					</file>
				</files>
			</build>
		</profile>
		<profile name="nix" parent="nixish" os="nix"/>
		<profile name="bsd" parent="nixish" os="bsd"/>
		<profile name="win" parent="com" os="win">
 			<build type="lib" mode="static" lang="cpp">
				<files>
					<file type="cpp">
						<args><arg>/EHsc</arg></args>
					</file>
				</files>
			</build>
		</profile>
	</profiles>
</maiken>
